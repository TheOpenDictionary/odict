{
  "plugins": [
    {
      "type": "sentence-case"
    }
  ],
  "packages": {
    ".": {
      "release-type": "simple",
      "exclude-paths": ["js", "wasm", "python", "jvm"]
    },
    "js": {
      "release-type": "node",
      "component": "js"
    },
    "wasm": {
      "release-type": "node",
      "component": "wasm"
    },
    "python": {
      "release-type": "python",
      "component": "python"
    },
    "jvm": {
      "release-type": "java",
      "component": "jvm"
    }
  }
}