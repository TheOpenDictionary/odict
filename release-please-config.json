{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "plugins": [
    {
      "type": "sentence-case"
    },
    {
      "type": "linked-versions",
      "groupName": "odict",
      "components": [
        "lib", "cli"
      ]
    }
  ],
  "include-component-in-tag": true,
  "tag-separator": "/",
  "packages": {
    "cli": {
      "release-type": "rust",
      "component": "cli"
    },
    "lib": {
      "release-type": "rust",
      "component": "lib"
    },
    "node": {
      "release-type": "node",
      "component": "node"
    },
    "python": { 
      "release-type": "rust",
      "component": "python"
    }
  }
}