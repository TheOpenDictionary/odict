namespace schema;

enum POS:byte {
    verb = 0,
    noun,
    adj,
    pronoun,
    adv,
    prep,
    conj,
    intj,
    prefix,
    suffix,
    particle
}

table Etymology {
    id:ulong;
    description:string;
    usages:[Usage];
}

table Group {
    id:ulong;
    description:string;
    definitions:[string];
}

table Usage {
    id:ulong;
    pos:string;
    definitions:[string];
    groups:[Group];
}

table Entry {
    id:ulong;
    term:string (key);
    etymologies:[Etymology];
}

table Dictionary {
    id:ulong;
    name:string;
    entries:[Entry];
}

root_type Dictionary;