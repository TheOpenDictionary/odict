
# ---------------------------------------------------------------------------- #
#                                    Schema                                    #
# ---------------------------------------------------------------------------- #

schema:
	flatc -g -o . schema/schema.fbs

# ---------------------------------------------------------------------------- #
#                                    Library                                   #
# ---------------------------------------------------------------------------- #

OUTPUT=build

lib: schema
	go build -buildmode=c-shared -o ${OUTPUT} ./lib

# ---------------------------------------------------------------------------- #
#                                      CLI                                     #
# ---------------------------------------------------------------------------- #

cli:
	go build -o ${OUTPUT} ./cli

# ---------------------------------------------------------------------------- #
#                                    Python                                    #
# ---------------------------------------------------------------------------- #

python:
	poetry build

pytest: python
	RUNTIME_ENV=test poetry run pytest ./python

clean:
	rm -rf setup.py dist build schema/*.go